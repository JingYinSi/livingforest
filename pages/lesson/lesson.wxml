<!--index.wxml-->
<view class="container">
  <image style="width: 100%; height: 200px; background-color: #eeeeee;" src="{{banner}}"></image>
  <view class="list" wx:for="{{list.items}}" wx:for-item="item" wx:key="item">
    <view class="list_item">
      <image class="list_item_img" mode="aspectFit" src="{{list.img}}"></image>
      <view class="list_item_content">
        <view class="list_item_content_title">{{item.text}}</view>
        <view class="list_item_content_desc">{{item.desc}}</view>
        <view class="list_item_content_form">
          <image style="width: 25px; height: 25px;" src="../../imgs/icon-lotus.png"></image>
          <view style="padding-left: 15rpx; padding-right: 15rpx;">报数</view>
          <input style="padding-left: 15rpx" class="input" type="number" name="input"/>
          <view style="padding-left: 15rpx; ">遍</view>
        </view>
      </view>
      <view class="list_item_action">
      </view>
    </view>
  </view>
  <view class="section">
    <textarea class="textarea" placeholder="placeholder颜色是红色的" placeholder-style="color:red;"  />
  </view>
</view>
