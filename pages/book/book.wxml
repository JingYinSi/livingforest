<view class="page">
  <view class="group_1">
    <view class="image-wrapper_1">
      <image src="../../imgs/book/SketchPng450d5fb54bc9f1a34cd2fc546d11bf5d0659058e904d0a30127a34f3c3166cf7.png" class="image_2"></image>
    </view>
    <view class="text-wrapper_1">
      <text lines="1" class="text_2">{{calenderInfo.gongLiDaySpilt[0]}}年</text>
    </view>
    <view class="text-wrapper_2">
      <text lines="1" decode="true" class="text_3">{{calenderInfo.gongLiDaySpilt[1]}}</text>
      <view class="box_3"></view>
      <text lines="1" decode="true" class="text_3">{{calenderInfo.gongLiDaySpilt[2]}}</text>
    </view>
    <view class="box_2">
      <view class="text-wrapper_3" wx:if="{{calenderInfo.specialDay!=''}}">
        <text lines="1" class="text_4">{{calenderInfo.specialDay}}</text>
      </view>
    </view>
    <view class="text-wrapper_4">
      <text lines="1" decode="true" class="text_5">藏历&nbsp;{{calenderInfo.zangLiDay}}</text>
    </view>
  </view>
  <view class="box_17_2">
    <view class="group_8">
      <text lines="1" class="text_24">功课</text>
      <view class="text-wrapper_11">
        <text lines="1" class="text_25">{{myInfo.lessonInsCnt}}</text>
        <text lines="1" class="text_26">(门)</text>
      </view>
    </view>
    <view>
      <image src="../../imgs/book/SketchPngbb75e428ab994ceef58d51245acf211994ada070c2a8fccf96c4381e59e1964f.png" class="image_13"></image>
    </view>
    <view class="group_9">
      <text lines="1" class="text_27">今日报数</text>
      <view class="text-wrapper_12">
        <text lines="1" class="text_28">{{myInfo.dayLessonInsNumber}}</text>
        <text lines="1" class="text_29">(门)</text>
      </view>
    </view>
  </view>

  <view class="group_2">
    <block wx:for="{{lessonInstances}}" wx:for-item="item" wx:key="item">
      <view class="box_4">
        <view class="box_5">
          <image src="../../imgs/book/SketchPng0b649de84ca7a8620614f1d6b806ee6521e9a952b16a475a1ffeaa366c753cb1.png" class="image_5"></image>
          <view class="box_6">
            <image src="{{item.lesson.icon}}"  class="lesson_img"></image>
          </view>
          <view class="box_7">
            <view class="text-wrapper_5">
              <text lines="1" class="text_6">{{item.lesson.title}}</text>
            </view>
          </view>
          <view class="box_8">
            <view class="image-text_1" bindtap="showApplylog" data-index="{{index}}">
              <text lines="1" class="text-group_1">{{item.lesson.name}}</text>
              <image src="../../imgs/book/SketchPng25080cf2af5dac48da56e92f6d64b5bae0cfe91d7451b35d2dfb9dd9c9255248.png" class="label_1"></image>
            </view>
            <view class="box_9">
              <view class="box_10">
                <text lines="1" class="text_7">总计完成</text>
                <view class="text-wrapper_6">
                  <text lines="1" class="text_8">{{item.totalTimes/10000}}万</text>
                </view>
              </view>
              <image src="../../imgs/book/SketchPng0d183d1f0da65283bdb28b64090feb7564abd942cd7e6e34be5ec847d2ae4477.png" class="image_4"></image>
              <view class="box_11">
                <text lines="1" class="text_10">累计天数</text>
                <view class="text-wrapper_7">
                  <text lines="1" class="text_11">{{item.days}}天</text>
                </view>
              </view>
            </view>
          </view>
          
        </view>
        <image src="../../imgs/book/SketchPngbcc0fdbeee42f8dbc2545d7abffc66d020a73af9b5954abfb7c74b2251830595.png" class="image_6"></image>
        <image src="../../imgs/book/SketchPng6c2bc65e606410348ce26d129d27c12c3d6b1a21bd21e24d82f7ef1c19fba832.png" class="label_4"></image>
      </view>
    </block>
  </view>
</view>