<view class="page">
  <view class="box_2">
    <text lines="1" class="text_2">妙用功德海</text>
  </view>
  <block wx:for="{{lessonInstances}}" wx:for-item="item" wx:key="item">
    <view class='group_100'>
      <view class="box_3">
        <image src="../../imgs/square/square_left.png" class="left"> </image>
        <image src="{{item.lesson.icon}}" class="block_1">
        </image>
          <view class="block_2">
          <text lines="1" class="text_3">{{item.lesson.name}}</text>
          <view class="text-wrapper_1">
            <text lines="1" class="text_4">{{item.populations}}人</text>
            <text lines="1" class="text_5">正与我一同做功课</text>
          </view>
          <view class="text-wrapper_2">
            <text lines="1" class="text_6" bindtap="showTrendsItem" data-index="{{index}}">前往查看</text>
          </view>
        </view>
        <image src="../../imgs/square/square_right.png" class="image_3"></image>
      </view>
    </view>
  </block>
</view>