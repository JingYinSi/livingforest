

.container {
  background-color: #EBDFCB;
  padding-left: 7%;
} 
.titleBar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  height: 49px;
  width: 91.55%;
}

.leftTitleBar {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
  height: 49px;
}
.rightTitleBar {
  display: flex;
  flex-direction: row-reverse;
  align-items:flex-end;
  height: 49px;
}
.selectedActivaty {
  display: flex;
  flex-direction: column;
  height: 39px;
  align-items: center;
}
.selectedActivatyText {
  font-size: 26px;
  letter-spacing: 1px;
}

.activatyLine {
  height: 4px;
  width: 50%;
}
.selectedLine {
  background: linear-gradient(to left, #FBA39F, #C72824);
}

.activaty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.activatyText {
  font-size: 15px;
  letter-spacing: 1px;
  color: #545454;
  padding-left: 17px;
}

.allActivatiesButton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 57px;
  height: 26px;
  border-style: solid;
  border-width: 1pt;
  border-color: #AC936C;
  border-radius: 11.5pt;
}
.allActivatiesButtonText {
  width: 28.5pt;
  font-size: 15px;
  letter-spacing: 1px;
  text-align: center;
  color: #AC936C;
}

.lessonsBar {
  display: flex;
  flex-direction: row;
  width: 91.55%;
  justify-content: flex-start;
  height: 26px;
  margin-top: 21px;
}
.lessonBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 57px;
  height: 26px;
  background-color: #DABD95;
  border-color: #AC936C;
  border-radius: 11.13px;
  margin-right: 8px;
}
.lessonBtnSelected {
  box-shadow: 0 6px 6px 0 #D1B389FF, 0 6px 20px 0 #D1B389FF;
}
.lessonBtnText {
  font-size: 13px;
  color: #AC936C;
}
.lessonBtnTextSelected {
  color: black;
}
.mainArea {
  display: flex;
  flex-direction: row;
  width: 91.55%;
}
.mainAreaTitleBar {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 7.6%;
}
.lessonText {
  text-orientation: mixed;
  writing-mode: vertical-rl;
}
.lessonTitle {
  padding-top:26px;
  font-size:22px;
  letter-spacing: 3px;
}
.lessonSubTitle {
  padding-top:33px;
  color: #636363;
  font-size:14px;
}
.mainAreaBody {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 92.2%;
}
.tangCard {
  width: 100%;
  height: 38px;
}