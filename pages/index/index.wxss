

.container {
  background-color: #EBDFCB;
  padding-left: 7%;
} 
.titleBar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  height: 49px;
  width: 91.55%;
}

.leftTitleBar {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
  height: 49px;
  background-color: blueviolet;
}
.rightTitleBar {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 49px;
  background-color:chartreuse;
}
.selectedActivaty {
  display: flex;
  flex-direction: column;
  height: 39px;
  justify-content: space-between;
  align-items: center;
  background-color: cyan;
}
.selectedActivatyText {
  font-size: 26px;
  letter-spacing: 1px;
  background-color: darkgoldenrod;
}
.selectedActivatyLine {
  height: 4px;
  width: 50%;
  background: linear-gradient(to left, #FBA39F, #C72824);
}

.activaty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.activatyLine {
  height: 2pt;
  width: 28.5pt;
}

.activatyText {
  font-size: 15px;
  color: #545454;
  text-align: center;
}

.allActivatiesButton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 52pt;
  height: 24pt;
  border-style: solid;
  border-width: 1pt;
  border-color: #AC936C;
  border-radius: 11.5pt;
}
.allActivatiesButtonText {
  width: 28.5pt;
  font-size: 11pt;
  text-align: center;
  color: #AC936C;
}

.lessonsBar {
  display: flex;
  flex-direction: row;
  width: 91.55%;
  justify-content: flex-start;
  height: 24pt;
  margin-top: 21px;
  background-color: darkgreen;
}
.lessonBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 52pt;
  height: 24pt;
  background-color: #DABD95;
  border-color: #AC936C;
  border-radius: 11.5pt;
  margin-right: 16pt;
}
.lessonBtnSelected {
  box-shadow: 0 6px 6px 0 #D1B389FF, 0 6px 20px 0 #D1B389FF;
}
.lessonBtnText {
  font-size: 11pt;
  color: #AC936C;
}
.lessonBtnTextSelected {
  color: black;
}
.mainArea {
  display: flex;
  flex-direction: row;
  width: 91.55%;
  background-color: darkslateblue;
}
.mainAreaTitleBar {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 7.6%;
  background-color: deepskyblue;
}
.lessonText {
  text-orientation: mixed;
  writing-mode: vertical-rl;
}
.lessonTitle {
  padding-top:20px;
  font-size:20pt;
  letter-spacing: 3pt;
}
.lessonSubTitle {
  padding-top:40px;
  font-size:13pt;
  letter-spacing: 0.3pt;
}
.mainAreaBody {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: gold;
  width: 92.2%;
}
.tangCard {
  width: 100%;
  height: 38px;
}